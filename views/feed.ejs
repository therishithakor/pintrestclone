<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <div class="cards flex flex-wrap gap-10">
        <% posts.forEach(function(elem){ %>
            <div class="card w-32">
                <div class="w-full h-40 bg-sky-200 rounded-lg overflow-hidden">
                    <img src="/images/uploads/<%= elem.Image %>" alt="" class="w-full h-full object-cover">
                </div>
                <h5 class="mt-2 text-sm"><%= elem.title %></h5>
                <h3 class="mt-2 text-xs opacity-60">@<%= elem.user.username %></h3>
            </div>
        <% }) %>
    </div>
</div>
<% include ./partials/footer.ejs %>